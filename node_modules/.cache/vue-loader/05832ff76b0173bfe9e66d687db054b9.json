scriptions-item>\r\n          <template slot=\"label\">\r\n            <i class=\"far fa-user-circle\"></i> 用户名\r\n          </template>\r\n          {{ user.username }}\r\n        </el-descriptions-item>\r\n        <el-descriptions-item>\r\n          <template slot=\"label\">\r\n            <i class=\"fas fa-mobile-alt\"></i>\r\n            手机号\r\n          </template>\r\n          {{ user.telephone }}\r\n        </el-descriptions-item>\r\n        <el-descriptions-item>\r\n          <template slot=\"label\">\r\n            <i class=\"fas fa-map-marker-alt\"></i>\r\n            住址\r\n          </template>\r\n          {{ user.address }}\r\n        </el-descriptions-item>\r\n        <el-descriptions-item>\r\n          <template slot=\"label\"> 性别 </template>\r\n          {{ user.sex }}\r\n        </el-descriptions-item>\r\n        <el-descriptions-item label=\"年龄\">{{ user.age }}</el-descriptions-item>\r\n        <el-descriptions-item label=\"姓名\">{{\r\n          user.realName\r\n        }}</el-descriptions-item>\r\n        <el-descriptions-item label=\"电子邮件\">{{\r\n          user.email\r\n        }}</el-descriptions-item>\r\n        <el-descriptions-item label=\"头像\">\r\n          <div style=\"position: relative\">\r\n            <el-avatar size=\"large\"\r\n              ><img :src=\"user.avatar\" alt=\"\"\r\n            /></el-avatar>\r\n            <el-button\r\n              size=\"mini\"\r\n              style=\"position: absolute; top: 5px; left: 60px\"\r\n              @click=\"uploadAvatar\"\r\n              >修改头像</el-button\r\n            >\r\n          </div>\r\n        </el-descriptions-item>\r\n      </el-descriptions>\r\n      <div class=\"sub-header\">\r\n        <h4><i class=\"fas fa-user-shield\"></i> 账户安全</h4>\r\n      </div>\r\n      <el-descriptions\r\n        direction=\"vertical\"\r\n        style=\"margin-top: 10px; margin-bottom: 50px\"\r\n        :column=\"3\"\r\n        border\r\n      >\r\n        <el-descriptions-item label=\"账号注册时间\" :span=\"1\">{{\r\n          user.createTime\r\n        }}</el-descriptions-item>\r\n        <el-descriptions-item label=\"在线状态\">\r\n          <el-tag size=\"medium\">在线</el-tag>\r\n        </el-descriptions-item>\r\n        <el-descriptions-item label=\"账号状态\">\r\n          <el-tag size=\"medium\" type=\"success\">{{ statusText }}</el-tag>\r\n        </el-descriptions-item>\r\n        <el-descriptions-item label=\"账户余额\">\r\n          <div style=\"position: relative\">\r\n            ￥{{ user.money }}\r\n\r\n            <el-button\r\n              size=\"mini\"\r\n              style=\"position: absolute; right: 0\"\r\n              @click=\"toRecharge\"\r\n              >充值金额</el-button\r\n            >\r\n          </div>\r\n        </el-descriptions-item>\r\n        <el-descriptions-item label=\"密码安全\" :span=\"1\">\r\n          <el-button size=\"mini\" type=\"warning\" @click=\"passwordOut\"\r\n            >修改密码</el-button\r\n          >\r\n        </el-descriptions-item>\r\n        <el-descriptions-item label=\"身份角色\">\r\n          <el-tag size=\"medium\">{{ roleText }}</el-tag>\r\n        </el-descriptions-item>\r\n      </el-descriptions>\r\n    </div>\r\n\r\n    <div v-else style=\"color: #909399\">请先登录（注册后登录即可成为会员）</div>\r\n\r\n    <!-- 添加信息弹出 -->\r\n    <el-dialog\r\n      title=\"填入个人信息\"\r\n      :visible.sync=\"dialogFormVisible\"\r\n      append-to-body\r\n    >\r\n      <el-form ref=\"form\" :model=\"form\" label-width=\"70px\">\r\n        <el-form-item label=\"用户名\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.username\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"手机号\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.telephone\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"住址\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.address\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"性别\" style=\"margin-bottom: 7px\">\r\n          <el-radio v-model=\"form.sex\" label=\"男\">男</el-radio>\r\n          <el-radio v-model=\"form.sex\" label=\"女\">女</el-radio>\r\n        </el-form-item>\r\n        <el-form-item label=\"年龄\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.age\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"姓名\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.realName\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"电子邮件\" style=\"margin-bottom: 7px\">\r\n          <el-input v-model=\"form.email\" style=\"width: 200px\"></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n      <el-button size=\"medium\" @click=\"dialogFormVisible = false\"\r\n        >取 消</el-button\r\n      >\r\n      <el-button size=\"medium\" type=\"primary\" @click=\"save\">确 定</el-button>\r\n    </el-dialog>\r\n\r\n    <!-- 客户充值 -->\r\n    <el-dialog\r\n      title=\"请输入充值金额\"\r\n      :visible.sync=\"dialogFormVisible2\"\r\n      append-to-body\r\n    >\r\n      <div class=\"money\">账户当前余额: ￥{{ user.money }}</div>\r\n      <el-form ref=\"form\" :model=\"rechargeForm\">\r\n        <h4>请输入充值金额</h4>\r\n        <el-form-item style=\"margin-bottom: 7px\">\r\n          <el-input\r\n            v-model=\"rechargeForm.money\"\r\n            style=\"width: 100px\"\r\n            size=\"small\"\r\n          ></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n      <el-button size=\"medium\" @click=\"dialogFormVisible2 = false\"\r\n        >取 消</el-button\r\n      >\r\n      <el-button size=\"medium\" type=\"primary\" @click=\"recharge\"\r\n        >确 定</el-button\r\n      >\r\n    </el-dialog>\r\n\r\n    <!-- 上传头像 -->\r\n    <el-dialog\r\n      title=\"上传头像\"\r\n      :visible.sync=\"dialogFormVisible3\"\r\n      append-to-body\r\n    >\r\n      <el-form ref=\"form\" :model=\"form\">\r\n        <h4>请选择图片</h4>\r\n        <!--  -->\r\n        <el-form-item style=\"margin-bottom: 7px\" label=\"头像\">\r\n          <el-upload\r\n            :action=\"\r\n              'http://' +\r\n              this.$root.$children[0]._data.filesUploadUrl +\r\n              '/files/upload'\r\n            \"\r\n            :on-success=\"uploadSuccess\"\r\n            ref=\"upload\"\r\n          >\r\n            <el-button size=\"small\" type=\"primary\">点击上传</el-button>\r\n          </el-upload>\r\n        </el-form-item>\r\n      </el-form>\r\n      <el-button size=\"medium\" @click=\"dialogFormVisible3 = false\"\r\n        >取 消</el-button\r\n      >\r\n      <el-button size=\"medium\" type=\"primary\" @click=\"save\">确 定</el-button>\r\n    </el-dialog>\r\n\r\n    <!-- 修改密码 -->\r\n    <el-dialog\r\n      title=\"请填入相关信息\"\r\n      :visible.sync=\"dialogFormVisible4\"\r\n      append-to-body\r\n    >\r\n      <el-form :model=\"passwordForm\" label-width=\"140px\">\r\n        <el-form-item style=\"margin-bottom: 7px\" label=\"请输入原密码\">\r\n          <el-input\r\n            v-model=\"passwordForm.password\"\r\n            style=\"width: 300px\"\r\n            show-password\r\n            prefix-icon=\"el-icon-key\"\r\n            type=\"password\"\r\n          ></el-input>\r\n        </el-form-item>\r\n        <el-form-item style=\"margin-bottom: 7px\" label=\"请输入新密码\">\r\n          <el-input\r\n            v-model=\"passwordForm.newPassword\"\r\n            prefix-icon=\"el-icon-key\"\r\n            style=\"width: 300px\"\r\n            show-password\r\n            type=\"password\"\r\n          ></el-input>\r\n        </el-form-item>\r\n        <el-form-item style=\"margin-bottom: 7px\" label=\"请再次输入新密码\">\r\n          <el-input\r\n            v-model=\"passwordForm.twicePassword\"\r\n            prefix-icon=\"el-icon-key\"\r\n            style=\"width: 300px\"\r\n            show-password\r\n            type=\"password\"\r\n          ></el-input>\r\n        </el-form-item>\r\n      </el-form>\r\n      <el-button size=\"medium\" @click=\"dialogFormVisible4 = false\"\r\n        >取 消</el-button\r\n      >\r\n      <el-button size=\"medium\" type=\"primary\" @click=\"changePassword\"\r\n        >确 定</el-button\r\n      >\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport request from '../utils/request'\r\nexport default {\r\n  data() {\r\n    return {\r\n      isLogin: sessionStorage.getItem('userId'),\r\n      user: {},\r\n      form: {},\r\n      rechargeForm: {},\r\n      passwordForm: {},\r\n      dialogFormVisible: false,\r\n      dialogFormVisible2: false,\r\n      dialogFormVisible3: false,\r\n      dialogFormVisible4: false,\r\n      timer: null\r\n    }\r\n  },\r\n  created() {\r\n    // console.log(this.$root)\r\n    this.load()\r\n    if (this.$route.query.from == 'order') {\r\n      this.dialogFormVisible2 = true\r\n    }\r\n  },\r\n  methods: {\r\n    passwordOut() {\r\n      this.dialogFormVisible4 = true\r\n      this.passwordForm = {\r\n        userId: sessionStorage.getItem('userId')\r\n      }\r\n    },\r\n    changePassword() {\r\n      if(this.passwordForm.password==null||\r\n          this.passwordForm.newPassword==null||\r\n          this.passwordForm.twicePassword==null){\r\n        this.$message.error('输入不允许为空！')\r\n      }\r\n      else if(this.passwordForm.newPassword!=this.passwordForm.twicePassword){\r\n        this.$message.error('两次密码不一致，请重新输入')\r\n        this.passwordForm.newPassword=''\r\n        this.passwordForm.twicePassword=''\r\n      }else{\r\n        request\r\n            .post('/user/password', this.passwordForm)\r\n            .then((res) => {\r\n              if (res.code === '0') {\r\n                this.$message({\r\n                  message: res.msg,\r\n                  type: 'success',\r\n                  duration: 1000\r\n                })\r\n                this.timer = setTimeout(() => {\r\n                  this.dialogFormVisible4 = false\r\n                }, 1000)\r\n              }else if(res.code==='1111'){\r\n                this.$message.error(res.msg)\r\n                this.passwordForm.password=''\r\n              } else {\r\n                this.$message.error('登录失败！请联系服务器管理员！')\r\n              }\r\n            })\r\n            .catch((err) => {\r\n              console.log(err)\r\n            })\r\n      }\r\n    },\r\n\r\n    uploadAvatar() {\r\n      this.dialogFormVisible3 = true\r\n      this.form = {}\r\n      // 清空原文件内容\r\n      this.$nextTick(() => {\r\n        this.$refs['upload'].clearFiles()\r\n      })\r\n    },\r\n    uploadSuccess(res) {\r\n      this.form.avatar = res.data\r\n      // this.dialogFormVisible3 = false\r\n      // this.load()\r\n    },\r\n    toRecharge() {\r\n      this.dialogFormVisible2 = true\r\n      this.rechargeForm = {}\r\n    },\r\n    recharge() {\r\n      this.rechargeForm.userId = this.user.userId\r\n      console.log(this.rechargeForm)\r\n      request.patch('/user/recharge', this.rechargeForm).then((res) => {\r\n        if (res.code === '0') {\r\n          this.$message({\r\n            message: res.msg,\r\n            type: 'success',\r\n            duration: 1000\r\n          })\r\n          this.dialogFormVisible2 = false\r\n          this.load()\r\n        }\r\n      })\r\n    },\r\n    addUser() {\r\n      this.dialogFormVisible = true\r\n    },\r\n    save() {\r\n      let userId = sessionStorage.getItem('userId')\r\n      request\r\n        .put('/user/' + userId, this.form)\r\n        .then((res) => {\r\n          if (res.code == '0') {\r\n            this.$message({\r\n              message: res.msg,\r\n              type: 'success',\r\n              duration: 1000\r\n            })\r\n            clearTimeout(this.timer) //清除延迟执行\r\n            this.timer = setTimeout(() => {\r\n              //设置延迟执行\r\n              this.load()\r\n            }, 1000)\r\n            this.dialogFormVisible = false\r\n            this.dialogFormVisible3 = false\r\n          } else {\r\n            this.$message.error('保存失败！服务器出错！')\r\n          }\r\n        })\r\n        .catch((err) => {\r\n          console.log(err)\r\n        })\r\n    },\r\n    load() {\r\n      let userId = sessionStorage.getItem('userId')\r\n      if (userId) {\r\n        request\r\n          .get('/user/' + userId)\r\n          .then((res) => {\r\n            if (res.code == '0') {\r\n              this.$message({\r\n                message: res.msg,\r\n                type: 'success',\r\n                duration: 1000\r\n              })\r\n              this.user = Object.assign({}, this.user, res.data)\r\n              this.form = Object.assign({}, this.form, res.data)\r\n            }\r\n          })\r\n          .catch((err) => {\r\n            console.log(err)\r\n          })\r\n      }\r\n    }\r\n  },\r\n  computed: {\r\n    statusText() {\r\n      return this.user.status === 1 ? '正常' : '异常'\r\n    },\r\n    roleText() {\r\n      if (this.user.role === 'admin') {\r\n        return '管理员'\r\n      }\r\n      if (this.user.role === 'shop') {\r\n        return '商家'\r\n      }\r\n      return '客户'\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.container {\r\n  width: 100%;\r\n  margin-left: 50%;\r\n  transform: translate(-50%);\r\n  padding: 20px;\r\n  box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px,\r\n    rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;\r\n  border-radius: 5px;\r\n  margin-top: 20px;\r\n}\r\n.header {\r\n  /* background-color: pink; */\r\n  height: 50px;\r\n  line-height: 60px;\r\n  border-bottom: 1px dotted rgba(204, 204, 204, 0.5);\r\n}\r\n.sub-header {\r\n  margin-top: 20px;\r\n  display: flex;\r\n}\r\nh3,\r\nh4 {\r\n  font-weight: 400;\r\n}\r\n.money {\r\n  margin-bottom: 20px;\r\n}\r\n</style>"]}]}